<%= content_for(:main_class, "support support-chapter card-background #{@chapter.filename}") %>


<section class="support-chapter-container">
  <% cache [@chapters, @chapter] do %>
    <%= render partial: 'table_of_contents' %>
  <% end %>

  <% cache @chapter do %>
    <div class='support-content card'>
      <h1><%= @chapter.title %></h1>
      <p>Last updated <%= @chapter.updated %></p>
      <p><%= @chapter.description %></p>
      <%= @chapter.content.html_safe %>
    </div>
  <% end %>
</section>
